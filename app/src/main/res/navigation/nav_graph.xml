<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.mariusbudin.sampleclean.features.characters.presentation.CharactersFragment"
        android:label="@string/characters_title"
        tools:layout="@layout/generic_list_fragment">
        <action
            android:id="@+id/action_charactersFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailsFragment" />

    </fragment>
    <fragment
        android:id="@+id/characterDetailsFragment"
        android:name="com.mariusbudin.sampleclean.features.characters.presentation.CharacterDetailsFragment"
        android:label="@string/episodes_details_title"
        tools:layout="@layout/character_details_fragment" />
    <fragment
        android:id="@+id/episodesFragment"
        android:name="com.mariusbudin.sampleclean.features.episodes.presentation.EpisodesFragment"
        android:label="@string/episodes_title"
        tools:layout="@layout/generic_list_fragment" />
</navigation>